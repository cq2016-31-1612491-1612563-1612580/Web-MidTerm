<!-- main content start-->
<div id="page-wrapper">
    <div class="privacy py-sm-5 py-4">
        <div class="main-page py-xl-4 py-lg-2">
            <!-- //tittle heading -->
            <div class="content mt-3">
                <div class="animated fadeIn">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong class="card-title">Dữ liệu</strong>
                                </div>
                                <div class="card-body">
                                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                        <thead>
                                        <tr>
                                            <th>ID Tài Khoản</th>
                                            <th>Tên tài khoản</th>
                                            <th>Email</th>
                                            <th>Số điện thoại</th>
                                            <th>Hành động</th>
                                            <th>Xóa</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {{#each data}}
                                            <tr>
                                                <th scope="row">{{this.id}}</th>
                                                <td>{{this.name}}</td>
                                                <td>{{this.email}}</td>
                                                <td>{{this.sdt}}</td>
                                                <td>
                                                    <div class="row">
                                                        <div class="col-sm-3">
                                                            <a style="color: green" class="fa fa-edit" href='/TaiKhoan/edit?id={{this._id}}'
                                                               alt="Sửa"></a>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="col-sm-3">
                                                        <a style="color: green" class="fa fa-remove" href='/TaiKhoan/delete?id={{this._id}}'
                                                           alt="Xóa"></a>
                                                    </div>
                                                </td>
                                            </tr>
                                        {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div><!-- .animated -->
            </div><!-- .content -->


        </div>
    </div>
</div>
