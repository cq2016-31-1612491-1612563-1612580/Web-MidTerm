<div id="page-wrapper">
    <div class="privacy py-sm-5 py-4">
        <div class="main-page py-xl-4 py-lg-2">
            <!-- //tittle heading -->
            <table class="table">
                <thead>
                    <tr>
                        <th class="title3" scope="col">Số thứ tự</th>
                        <th scope="col">Sản phẩm</th>
                        <th scope="col">Số lượng</th>
                        <th scope="col">Giá</th>
                        <th scope="colgroup">Tùy chọn</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if data}}
                    {{#each data}}
                    <tr>
                        <td scope="row">{{this.id}}</td>
                        <td>
                            <div class="imgofProduct"><img src="/images/ipxsmax.jpeg" alt=" " height="100px"></div>
                            <div class="nameofProduct" >{{this.brand}}</div>
                        </td>
                        <td>{{this.count}}</td>
                        <td>{{this.price}}</td>
                        <td>
                            <a href="#">Sửa</a>
                            &nbsp&nbsp&nbsp&nbsp
                            <a href="#">Xóa</a>
                        </td>
                    </tr>
                    {{/each}}
                    {{/if}}
                    <tr>
                        <a href="/products/add">Thêm</a>
                    </tr>
                </tbody>
            </table>
        </div>
        </div>
    </div>
</div>