<div id="page-wrapper">
    <div class="privacy py-sm-5 py-4">
        <div class="main-page py-xl-4 py-lg-2">
            <!-- //tittle heading -->
            <table class="table">
                <form method="post" enctype="multipart/form-data">
                    <tbody>
                        {{#if data}}
                        <input type="hidden" name="id" value="{{data._id}}">
                        <tr>
                            <td>Tên</td>
                            <td><input type="text" name="name" value="{{data.name}}"/></td>
                        </tr>
                        <tr>
                            <td>Thương hiệu</td>
                            <td>
                                <select name="brand">
                                    {{#each brand}}
                                    <option value="{{this.name}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Số lượng</td>
                            <td><input type="text" name="count" value="{{data.count}}"/></td>
                        </tr>
                        <tr>
                            <td>Giá</td>
                            <td><input type="text" name="price" value="{{data.price}}"/></td>
                        </tr>
                        <tr>
                            <td>Hình ảnh</td>
                            <td><input type="file" name="fileImg" value="{{data.img}}"/></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <input type="submit" value="Sửa" />
                            </td>
                        </tr>
                        {{/if}}
                    </tbody>
                </form>
            </table>
        </div>
        </div>
    </div>
</div>