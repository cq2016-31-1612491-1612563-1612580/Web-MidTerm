<div class="bg-light py-3">
    <div class="container">
        <div class="row">

            <div class="col-md-12 mb-0"><a href="/">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong
                    class="text-black">{{title}}</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row justify-content-center">
            <form class="col-md-6 mb-5 mb-md-0" method="post" action="#">
                <h2 class="h3 mb-3 text-black">{{title}}</h2>
                <div class="p-3 p-lg-5 border">
                    <div class="form-group row">
                        <div class="col-sm">
                            <label for="email" class="text-black">Email</label>
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="email">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm">
                            <label for="password1" class="text-black">New Password</label>
                            <input type="password" class="form-control" id="password1" name="password1"
                                placeholder="New Password">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm">
                            <label for="password2" class="text-black">Confirm Password</label>
                            <input type="password" class="form-control" id="password2" name="password2"
                                placeholder="Confirm Password">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md">
                            <button class="btn btn-primary btn-lg py-3 btn-block" type="submit">Cập nhật</button>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>
</div>